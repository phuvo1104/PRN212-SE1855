<Window x:Class="MyStoreWpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EF"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="400" Width="655">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="30" HorizontalAlignment="Left" Margin="145,29,0,0" VerticalAlignment="Top">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Blue" Offset="0.0"></GradientStop>
                    <GradientStop Color="Red" Offset="0.5"></GradientStop>
                    <GradientStop Color="Yellow" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email:" FontSize="25" HorizontalAlignment="Left" Margin="80,119,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" FontSize="25" HorizontalAlignment="Left" Margin="200,123,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="380"/>
        <Label Content="Password:" FontSize="25" HorizontalAlignment="Left" Margin="58,192,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword"  FontSize="25" Password="@1" HorizontalAlignment="Left" Margin="200,204,0,0" VerticalAlignment="Top" Width="380"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" FontSize="25" HorizontalAlignment="Left" Margin="200,279,0,0" VerticalAlignment="Top" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" FontSize="25" HorizontalAlignment="Left" Margin="475,279,0,0" VerticalAlignment="Top" Width="105"/>

    </Grid>
</Window>
