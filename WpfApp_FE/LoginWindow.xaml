<Window x:Class="WpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="330" Width="615">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="30" Foreground="Blue" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Email Address:" FontSize="20" HorizontalAlignment="Left" Margin="37,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" FontSize="20" HorizontalAlignment="Left" Margin="195,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="390"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Margin="37,147,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" FontSize="20" HorizontalAlignment="Left" Margin="195,157,0,0" VerticalAlignment="Top" Width="390"/>
        <Button x:Name="btnLogin" Content="Đăng nhập" FontSize="20" HorizontalAlignment="Left" Margin="205,219,0,0" VerticalAlignment="Top" Height="45" Width="115" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Thoát" FontSize="20" HorizontalAlignment="Left" Margin="470,219,0,0" VerticalAlignment="Top" Height="45" Width="115"/>

    </Grid>
</Window>
